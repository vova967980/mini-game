{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,

    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,

    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,

    "arrowParens": "always",
    "singleAttributePerLine": true,

    "endOfLine": "lf",
    "proseWrap": "always",

    "overrides": [
        {
            "files": "*.svg",
            "options": {
                "parser": "none"
            }
        }
    ]
}
